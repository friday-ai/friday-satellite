{
  "name": "friday-satellite",
  "version": "1.0.0",
  "per-env": {
    "production": {
      "env": "prod"
    },
    "development": {
      "env": "dev"
    }
  },
  "scripts": {
    "postinstall": "npm run install-server && npm run install-client",
    "start": "per-env",
    "start:": "npm run start:production",
    "start:production": "concurrently -k -p \"none\" \"npm run start-server:prod\" \"npm run start-client:prod\"",
    "start:development": "concurrently -k -p \"none\" \"npm run start-server:dev\" \"npm run start-client:dev\"",
    "test": "echo \"Error: tests are not yet implemented\" && exit 1",
    "install-server": "cd server && npm install",
    "start-server:prod": "cd server && npm run start:production",
    "start-server:dev": "cd server && npm run start:development",
    "install-client": "cd client && npm install",
    "start-client:prod": "cd client && npm run start:prod",
    "start-client:dev": "cd client && npm run start:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday-satellite.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/friday-ai/friday-satellite/issues"
  },
  "homepage": "https://github.com/friday-ai/friday-satellite#readme",
  "dependencies": {
    "concurrently": "^5.1.0",
    "per-env": "^1.0.2"
  }
}
